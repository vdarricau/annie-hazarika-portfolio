{% if page.header.workItemImage %}
    {% set image = page.header.workItemImage %}
{% else %}
    {% set image = page.media.images|first %}
    {% set image = image.cropResize(640, 3000).format('webp').url %} {# We keep the original height, but maximum width is 640px #}
{% endif %}


{% set column = page.header.columnWidth ? page.header.columnWidth : 'col-md-3' %}

<div class="item web col-sm-6 {{ column }} mb-4">
    <a
        href="{{ page.url }}"
        class="item-wrap fancybox"
        aria-label="{{ page.title }}"
    >
        <div class="work-info">
            <h3>{{ page.title }}</h3>
        </div>
        {% if (image) %}
            <img 
                class="img-fluid"
                src="{{ image }}"
                alt="{{ page.title }}"
            > 
        {% endif %}
    </a>
</div>