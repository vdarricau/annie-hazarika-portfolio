{% extends 'partials/base.html.twig' %}

{% set showImages = page.header.showImages != false %}

{% block content %}
    <div class="portfolio-item" data-aos="zoom-in-up">
        <section class="section">
            <h1 class="mb-4">{{ page.title }}</h1>

            {{ page.content|raw }}
        </section>

        {% if (showImages) %}
            <section class="section pt-0">
                {% for image in page.media.images %}
                    {% if 'not-shown-' not in image.filename %}
                        <img src="{{ image.cropResize(640, 3000).url }}" alt="{{ image.filename }}">
                    {% endif %}
                {% endfor %}
            </section>
        {% endif %}
    </div>
{% endblock %}